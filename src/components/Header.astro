                <i class="bi bi-rocket-takeoff-fill"></i>
                <span>Innovación</span>
            </a>
        </nav>
        <div class="header-actions">
            <button class="theme-toggle" id="themeToggle" aria-label="Cambiar tema">
                <i class="bi bi-moon-stars-fill"></i>
            </button>
        </div>
    </div>
</header>

<style>
/* Header scroll behavior */
.main-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: transform 0.3s ease-in-out;
}

.main-header.header-hidden {
    transform: translateY(-100%);
}

.main-header.header-visible {
    transform: translateY(0);
}

.semanas-dropdown {
    position: relative;
}

.semanas-submenu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    box-shadow: var(--shadow);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000;
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    width: auto;
    min-width: 200px;
}

.semanas-dropdown:hover .semanas-submenu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.submenu-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--surface);
    border-radius: 6px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.2s ease;
    font-size: 0.8rem;
}

.submenu-item:hover {
    background: var(--accent-primary);
    color: white;
    transform: translateX(5px);
}

.submenu-item i {
    font-size: 0.9rem;
}

.submenu-item span {
    font-weight: 500;
}

.dropdown-toggle .dropdown-icon {
    margin-left: 0.5rem;
    transition: transform 0.3s ease;
}

.semanas-dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
}

/* Mobile adjustments */
@media (max-width: 768px) {
    .semanas-submenu {
        display: none;
    }

    .main-nav.active .semanas-submenu {
        display: flex;
        position: static;
        box-shadow: none;
        border: none;
        background: transparent;
    }
}
</style>

<script>
    // Header scroll behavior: hide on scroll down, show on scroll up
    let lastScrollTop = 0;
    let scrollThreshold = 100; // Minimum scroll distance to trigger
    const header = document.getElementById('mainHeader');
    
    window.addEventListener('scroll', () => {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        // Only apply behavior after scrolling past threshold
        if (scrollTop > scrollThreshold) {
            if (scrollTop > lastScrollTop) {
                // Scrolling down - hide header
                header.classList.add('header-hidden');
                header.classList.remove('header-visible');
            } else {
                // Scrolling up - show header
                header.classList.add('header-visible');
                header.classList.remove('header-hidden');
            }
        } else {
            // Near top of page - always show header
            header.classList.remove('header-hidden');
            header.classList.remove('header-visible');
        }
        
        lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
    }, { passive: true });
</script>
