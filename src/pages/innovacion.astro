---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
// Página de Innovación Tecnológica
---

<BaseLayout title="Innovación Tecnológica | ErgoWave">
    <div slot="header">
        <Header />
        <Breadcrumb items={[
            { label: 'Inicio', href: '/' },
            { label: 'Proyecto', href: '/' },
            { label: 'Innovación Tecnológica' }
        ]} />
    </div>

    <div class="background-effects">
        <div class="particles-container">
            <div class="particle particle-1"></div>
            <div class="particle particle-2"></div>
            <div class="particle particle-3"></div>
            <div class="particle particle-4"></div>
            <div class="particle particle-5"></div>
            <div class="particle particle-6"></div>
        </div>
        <div class="gradient-orbs">
            <div class="orb orb-1"></div>
            <div class="orb orb-2"></div>
            <div class="orb orb-3"></div>
        </div>
    </div>

    <div class="innovation-content">
        <div class="innovation-header">
            <h1>Innovación Tecnológica</h1>
            <p class="innovation-subtitle">Contenido en desarrollo</p>
        </div>

        <section class="content-section development-section">
            <div class="development-message">
                <div class="development-icon">
                    <i class="bi bi-tools"></i>
                </div>
                <h2>En Desarrollo</h2>
                <p>Estamos trabajando en esta sección. Pronto encontrarás aquí información detallada sobre la innovación tecnológica de ErgoWave.</p>
                <div class="development-badge">
                    <i class="bi bi-hourglass-split"></i>
                    <span>Próximamente</span>
                </div>
            </div>
        </section>
    </div>
</BaseLayout>

<style>
.development-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
}

.development-message {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem;
    background: var(--surface);
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    border: 2px solid var(--border);
}

.development-icon {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    animation: pulse 2s ease-in-out infinite;
}

.development-icon i {
    font-size: 3rem;
    color: white;
}

.development-message h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 1rem;
}

.development-message p {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 2rem;
}

.development-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: white;
    border-radius: 50px;
    font-weight: 600;
    box-shadow: 0 5px 20px rgba(99, 102, 241, 0.3);
}

.development-badge i {
    font-size: 1.5rem;
    animation: spin 2s linear infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0 15px 40px rgba(99, 102, 241, 0.5);
    }
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@media (max-width: 768px) {
    .development-message {
        padding: 2rem;
    }
    
    .development-icon {
        width: 80px;
        height: 80px;
    }
    
    .development-icon i {
        font-size: 2.5rem;
    }
    
    .development-message h2 {
        font-size: 2rem;
    }
    
    .development-message p {
        font-size: 1rem;
    }
}
</style>
