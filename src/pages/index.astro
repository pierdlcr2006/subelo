---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import Header from '../components/Header.astro';
---

<BaseLayout title="ErgoWave - Mouse Tecnológico">
    <div slot="header">
        <Header />
        <Breadcrumb items={[
            { label: 'Inicio', href: '/' },
            { label: 'Proyecto' }
        ]} />
    </div>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <div class="hero-badge">
                    <i class="bi bi-star-fill"></i>
                    <span>Innovación Tecnológica 2025</span>
                </div>
                <h2>Del diseño digital al corte láser y Diseño 3D: dando forma a ErgoWave</h2>
                <div class="hero-description">
                    <p>Mouse tecnológico con vibración inteligente y recordatorio visual para estudiantes y tele-trabajadores que pasan +6 h frente al PC.</p>
                </div>
                <div class="hero-cta">
                    <a href="#features" class="btn-primary">
                        <span>Descubre más</span>
                        <i class="bi bi-arrow-down-circle-fill"></i>
                    </a>
                    <a href="/innovacion" class="btn-secondary">
                        <span>Ver Innovación</span>
                        <i class="bi bi-lightbulb-fill"></i>
                    </a>
                </div>
            </div>
            <div class="hero-visual">
                <div class="product-showcase">
                    <div class="mouse-3d">
                        <i class="bi bi-mouse"></i>
                    </div>
                    <div class="floating-elements">
                        <span class="element"><i class="bi bi-lightning-charge-fill"></i></span>
                        <span class="element"><i class="bi bi-battery-charging"></i></span>
                        <span class="element"><i class="bi bi-phone-fill"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Stats -->
    <section class="stats-section">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-heart-pulse-fill"></i>
            </div>
            <div class="stat-number">68%</div>
            <div class="stat-text">Jóvenes peruanos sienten dolor crónico en mano o espalda</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clock-fill"></i>
            </div>
            <div class="stat-number">6+</div>
            <div class="stat-text">Horas promedio frente al computador</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-number">100%</div>
            <div class="stat-text">Ergonómico y tecnológico</div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <h3>Nuestro Equipo</h3>
            <p class="section-description">Profesionales comprometidos con la innovación</p>
        </div>
        <div class="team-grid">
            <div class="team-member">
                <div class="member-avatar">
                    <img src="/images/Integrantes/antony_cholan.jpg" alt="Cholan Garcia Elver Antony" class="member-photo">
                </div>
                <div class="member-info">
                    <h4>Cholan Garcia Elver Antony</h4>
                </div>
            </div>
            <div class="team-member">
                <div class="member-avatar">
                    <img src="/images/Integrantes/piero_delacruz.jpg" alt="De La Cruz Palpa Piero Fabrizzio" class="member-photo">
                </div>
                <div class="member-info">
                    <h4>De La Cruz Palpa Piero Fabrizzio</h4>
                </div>
            </div>
            <div class="team-member">
                <div class="member-avatar">
                    <img src="/images/Integrantes/agustin_salas.jpg" alt="Salas Perez Agustín Santiago" class="member-photo">
                </div>
                <div class="member-info">
                    <h4>Salas Perez Agustín Santiago</h4>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Features -->
    <section class="features-section" id="features">
        <div class="section-header">
            <h3>¿Qué es ErgoWave?</h3>
            <p class="section-description">Tecnología innovadora diseñada para tu bienestar</p>
        </div>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-hand-index-thumb-fill"></i>
                </div>
                <h4>Masaje Vibratorio</h4>
                <p>Base con vibración inteligente para aliviar tensión en la mano</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-phone-vibrate-fill"></i>
                </div>
                <h4>Pantalla Recordatoria</h4>
                <p>Indica pausas activas para mantener hábitos saludables</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-mouse-fill"></i>
                </div>
                <h4>Diseño Ergonómico</h4>
                <p>Reduce la presión en las articulaciones de la mano</p>
            </div>
        </div>
    </section>
</BaseLayout>
