---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Header from '../../components/Header.astro';
// Página Semana 16
---

<BaseLayout title="Semana 16 - Presentación Final | ErgoWave">
    <div slot="header">
        <Header />
        <Breadcrumb items={[
            { label: 'Inicio', href: '/' },
            { label: 'Proyecto', href: '/' },
            { label: 'Semana 16 - Presentación Final' }
        ]} />
    </div>

    <div class="week-content">
        <div class="week-header">
            <h1>Semana 16 – Presentación Final</h1>
            <p class="week-subtitle">Demo completo y documentación del proyecto</p>
        </div>

        <div class="construction-message">
            <i class="bi bi-trophy"></i>
            <h2>Presentación final en preparación</h2>
            <p>Estamos preparando la demo completa, documentación y presentación final de ErgoWave. ¡El gran final se acerca!</p>
        </div>
    </div>
</BaseLayout>
