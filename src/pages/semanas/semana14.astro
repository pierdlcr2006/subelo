---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Header from '../../components/Header.astro';
// Página Semana 14
---

<BaseLayout title="Semana 14 - Testing | ErgoWave">
    <div slot="header">
        <Header />
        <Breadcrumb items={[
            { label: 'Inicio', href: '/' },
            { label: 'Proyecto', href: '/' },
            { label: 'Semana 14 - Testing' }
        ]} />
    </div>

    <div class="week-content">
        <div class="week-header">
            <h1>Semana 14 – Testing</h1>
            <p class="week-subtitle">Pruebas de usabilidad y validación con usuarios</p>
        </div>

        <div class="construction-message">
            <i class="bi bi-clipboard-data"></i>
            <h2>Testing en proceso</h2>
            <p>Estamos realizando pruebas de usabilidad y recopilando feedback de usuarios reales. ¡Mantente atento!</p>
        </div>
    </div>
</BaseLayout>
